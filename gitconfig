[credential]
	helper = cache --timeout=900
[core]
	editor = vim
[difftool "vimdiff"]
	cmd = vimdiff "$LOCAL" "$REMOTE"
[diff]
	tool = vimdiff
[difftool]
	prompt = true
[mergetool "fugitive"]
	cmd = vim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[merge]
	tool = fugitive
[mergetool]
	prompt = false
[alias]
	pullall = !git pull && git submodule init && git submodule update && git submodule status
	co = checkout
	ci = commit
	st = status
	br = branch
